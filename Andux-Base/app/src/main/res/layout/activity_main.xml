<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/first_add"
        android:text="+"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/first_number"
        android:text="0"
        android:textSize="20sp"
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/first_add"
        app:layout_constraintBottom_toBottomOf="@id/first_add"
        app:layout_constraintStart_toEndOf="@id/first_add"/>

    <Button
        android:id="@+id/first_minus"
        android:text="-"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/first_add"
        app:layout_constraintStart_toEndOf="@id/first_number"/>

    <Button
        android:id="@+id/second_add"
        android:text="+"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/first_add"
        app:layout_constraintStart_toStartOf="@id/first_add"/>

    <TextView
        android:id="@+id/second_number"
        android:text="0"
        android:textSize="20sp"
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/second_add"
        app:layout_constraintBottom_toBottomOf="@id/second_add"
        app:layout_constraintStart_toEndOf="@id/second_add"/>

    <Button
        android:id="@+id/second_minus"
        android:text="-"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/second_add"
        app:layout_constraintStart_toEndOf="@id/second_number"/>

    <TextView
        android:id="@+id/sum"
        android:text="0"
        android:textSize="20sp"
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/second_number"
        app:layout_constraintStart_toStartOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>